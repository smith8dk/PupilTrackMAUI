<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PupilTrack.HomePage"
             BackgroundColor="#182330"
             Title="Home Page">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" VerticalOptions="Start">
            <!-- Logo (Left) -->
            <Image Source="logo.png"
           HeightRequest="75"
           WidthRequest="75"
           Grid.Column="0"
           HorizontalOptions="Start"
           VerticalOptions="Center" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLogoTapped" />
                </Image.GestureRecognizers>
            </Image>

            <!-- Profile Image (Right) -->
            <Image Source="profile_icon.png"
           HeightRequest="50"
           WidthRequest="50"
           Grid.Column="2"
           HorizontalOptions="End"
           VerticalOptions="Center">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnProfileTapped" />
                </Image.GestureRecognizers>
            </Image>
        </Grid>


        <!-- Content -->
        <VerticalStackLayout Grid.Row="1" Spacing="30" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Welcome!"
                   FontSize="32"
                   TextColor="White"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <Grid ColumnSpacing="20" RowSpacing="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Horizontal Gaze Test -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="10" HorizontalOptions="Center">
                    <Frame CornerRadius="50" BackgroundColor="White" HeightRequest="100" WidthRequest="100" Padding="0">
                        <Image Source="eye_icon.png" HeightRequest="80" WidthRequest="80" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnHGNTestTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Frame>
                    <Label Text="Horizontal Gaze Test" FontSize="14" TextColor="White" HorizontalOptions="Center" />
                </VerticalStackLayout>

                <!-- Walk & Turn Test -->
                <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="10" HorizontalOptions="Center">
                    <Frame CornerRadius="50" BackgroundColor="White" HeightRequest="100" WidthRequest="100" Padding="0">
                        <Image Source="walk_icon.png" HeightRequest="80" WidthRequest="80" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnWalkTurnTestTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Frame>
                    <Label Text="Walk and Turn Test" FontSize="14" TextColor="White" HorizontalOptions="Center" />
                </VerticalStackLayout>

                <!-- One Leg Stand Test -->
                <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="10" HorizontalOptions="Center">
                    <Frame CornerRadius="50" BackgroundColor="White" HeightRequest="100" WidthRequest="100" Padding="0">
                        <Image Source="balance_icon.png" HeightRequest="65" WidthRequest="65" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnOneLegTestTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Frame>
                    <Label Text="One Leg Stand Test" FontSize="14" TextColor="White" HorizontalOptions="Center" />
                </VerticalStackLayout>
                
                <!-- Help Pages -->
                <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="10" HorizontalOptions="Center">
                    <Frame CornerRadius="50" BackgroundColor="White" HeightRequest="100" WidthRequest="100" Padding="0">
                        <Image Source="help_icon.png" HeightRequest="60" WidthRequest="60" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnHelpPageTapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Frame>
                    <Label Text="Help Pages" FontSize="14" TextColor="White" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Grid>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
