<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PupilTrack.AboutPage"
             BackgroundColor="#182330"
             Title="About Page">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="5">
            <!-- Title Section -->
            <Label Grid.Row="0"
               Text="Who Are We?"
               FontSize="24"
               HorizontalOptions="Center"
               TextColor="White"
               Margin="0,10,0,10"
               HorizontalTextAlignment="Center"
               FontAttributes="Bold"
               LineHeight="1.5" />

            <!-- About Section -->
            <Frame BackgroundColor="White" BorderColor="Black" CornerRadius="20" Padding="25" HasShadow="True" Margin="10">
                <StackLayout>
                    <Label Text="Our Promise:"
                           TextColor="Black"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                    <Label Text="PupilTrack is dedicated to improving road safety by providing law enforcement with a cutting-edge app that tracks the eye movement of impaired drivers. Our technology enhances road safety measures and aids in preventing accidents caused by driver impairment. By leveraging innovative solutions, we contribute to creating safer roads for all."
                           TextColor="Black"
                           FontSize="18"
                           LineHeight="1.5"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,0" />
                </StackLayout>
            </Frame>

            <!-- Back Button -->
            <Button Text="Back"
                    BackgroundColor="#1B1B1B"
                    BorderColor="White"
                    TextColor="White"
                    CornerRadius="25"
                    WidthRequest="120"
                    HeightRequest="50"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Clicked="AboutBackClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>