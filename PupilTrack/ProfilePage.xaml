<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PupilTrack.ProfilePage"
             BackgroundColor="#182330"
             Title="Profile Page">

    <!-- Grid for Full-Page Centering -->
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <VerticalStackLayout Spacing="20"
                             Padding="30"
                             Grid.Row="1"  >

        <!-- Circular Profile Picture -->
        <Frame WidthRequest="120" HeightRequest="120"
               BackgroundColor="White"
               Padding="5"
               CornerRadius="60"
               HorizontalOptions="Center"
               HasShadow="False">
            <Image Source="avatar_icon.png" Aspect="AspectFill" Clip="circle"/>
        </Frame>

        <!-- Edit Profile Button -->
        <Button Text="Edit Profile"
                BackgroundColor="#1B1B1B"
                BorderColor="White"
                TextColor="White"
                Padding="10"
                CornerRadius="10"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                WidthRequest="125"/>
        
        <!-- User Info Fields (Each with Separate Backdrops) -->
        <Frame BackgroundColor="White"
               Padding="10"
               CornerRadius="10"
               WidthRequest="250"
               HasShadow="False"
               HorizontalOptions="Center">
                <Label Text="Username:" TextColor="Black" FontSize="18" HorizontalTextAlignment="Center"/>
        </Frame>

            <Frame BackgroundColor="White"
               Padding="10"
               CornerRadius="10"
               WidthRequest="250"
               HasShadow="False"
               HorizontalOptions="Center">
                <Label Text="Email:" TextColor="Black" FontSize="18" HorizontalTextAlignment="Center"/>
        </Frame>

            <Frame BackgroundColor="White"
               Padding="10"
               CornerRadius="10"
               WidthRequest="250"
               HasShadow="False"
               HorizontalOptions="Center">
            <Label Text="Phone Number:" TextColor="Black" FontSize="18" HorizontalTextAlignment="Center"/>
        </Frame>

            <!-- Button Section -->
            <HorizontalStackLayout 
                Spacing="10"
                HorizontalOptions="Center"
                Padding="10"
                Margin="5">

            <!-- Back Button -->
            <Button Text="Back"
                BackgroundColor="#1B1B1B"
                BorderColor="White"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="100"
                HeightRequest="47"
                FontAttributes="Bold"
                Clicked="ProfileBackClicked" />

            <!-- Log Out Button -->
            <Button Text="Log Out"
                BackgroundColor="#1B1B1B"
                BorderColor="White"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="100"
                HeightRequest="47"
                FontAttributes="Bold"/>

            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>