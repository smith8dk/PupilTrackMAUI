<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PupilTrack.HGNTestPage"
             BackgroundColor="#1A1F26">

    <StackLayout Padding="20" Spacing="15">
        <!-- Title Label -->
        <Label Text="HGN Video Results"
               TextColor="White"
               FontSize="24"
               HorizontalOptions="Center" />

        <!-- Button to select a video file -->
        <Button Text="Select Video"
                Clicked="OnSelectVideoButtonClicked"
                HorizontalOptions="Center"
                BackgroundColor="White"
                TextColor="Black"
                FontAttributes="Bold"
                CornerRadius="10"  />

        <!-- Label to show success/error messages -->
        <Label x:Name="StatusLabel"
               Text="Please select or record a video to upload"
               HorizontalOptions="Center"
               TextColor="White"
               FontSize="16" />

        <!-- Progress indicator to show upload/progress -->
        <ActivityIndicator x:Name="ProgressIndicator"
                           IsRunning="False"
                           IsVisible="False"
                           HorizontalOptions="Center" />

        <!-- Label for sharing/downloading the stabilized video -->
        <Label x:Name="DownloadLabel"
               Text=""
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Center"
               IsVisible="False" />

        <!-- Button for downloading the video (optional, visible only after processing) -->
        <Button x:Name="DownloadButton"
                Text="Download Stabilized Video"
                HorizontalOptions="Center"
                IsVisible="False"
                BackgroundColor="White"
                TextColor="Black"
                CornerRadius="10"
                Clicked="OnDownloadButtonClicked" />

    </StackLayout>
</ContentPage>
